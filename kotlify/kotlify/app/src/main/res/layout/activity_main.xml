<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/background"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Kotlify Music"
        android:elevation="10dp"
        android:textAppearance="@android:style/TextAppearance.Material.Display1"
        />

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="switchToSong"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/song"
            android:padding="25dp"
            android:text="All Song"
            android:textSize="25sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="switchToGenre"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/genre"
            android:padding="25dp"
            android:text="All Genre"
            android:textSize="25sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="switchToArtist"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/artist"
            android:padding="25dp"
            android:text="All Artist"
            android:textSize="25sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

</LinearLayout>
